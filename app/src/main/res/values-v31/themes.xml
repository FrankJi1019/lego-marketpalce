<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_main</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowSwipeToDismiss">false</item>
        <item name="android:actionMenuTextColor">@color/red_100</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Theme.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_team22_lego_store_logo_red</item>
        <item name="android:windowSplashScreenAnimationDuration">5</item>
        <item name="android:windowSplashScreenBackground">@color/yellow_main</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>
</resources>